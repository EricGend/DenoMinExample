{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Run Deno Script",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--allow-ffi", "--allow-read"],
      "attachSimplePort": 9229
    },
    {
      "name": "Debug (CMake)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "stopAtEntry": false,
      "externalConsole": false
    }
  ]
}